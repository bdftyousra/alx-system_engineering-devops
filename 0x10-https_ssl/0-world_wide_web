#!/usr/bin/env bash
# Comment
prints () {
    dig "$1" | grep -A1 'ANSWER SECTION:' | sed -r "s/$1./$2/g" | awk -F" " 'NR==2 { print "The subdomain " $1 " is a " $4 " record and points to " $5 }'
}
if [ $# -eq 1 ];
then
    prints "www.$1" "www"
    prints "lb-01.$1" "lb-01"
    prints "web-01.$1" "web-01"
    prints "web-02.$1" "web-02"
elif [ $# -eq 2 ];
then
     prints "$2.$1" "$2"
fi
